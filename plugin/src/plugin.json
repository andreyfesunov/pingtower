{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "pingtower",
  "id": "pingtower-app",
  "info": {
    "description": "Monitor and manage URL workers with customizable check periods",
    "keywords": ["monitoring", "url", "ping", "workers"],
    "author": {
      "name": "andreyfesunov"
    },
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "includes": [
    {
      "type": "page",
      "name": "Workers",
      "path": "/a/%PLUGIN_ID%/list",
      "addToNav": true,
      "role": "Viewer",
      "defaultNav": true
    },
    {
      "type": "page",
      "name": "Create Worker",
      "path": "/a/%PLUGIN_ID%/create",
      "addToNav": false,
      "role": "Editor"
    },
    {
      "type": "page",
      "name": "Create from URL",
      "path": "/a/%PLUGIN_ID%/create/url",
      "addToNav": false,
      "role": "Editor"
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=10.4.0",
    "plugins": []
  }
}
